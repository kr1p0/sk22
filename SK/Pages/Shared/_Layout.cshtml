<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SK</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SK.styles.css" asp-append-version="true" />
    <link href='https://fonts.googleapis.com/css?family=Cabin' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css?family=Fira Sans' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css?family=Comfortaa' rel='stylesheet'>


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3 hideOnPrint">
              

                @if (User.Identity.IsAuthenticated)
                {
                     <div id="readOnlyInfo">
                        <svg onclick="closeReadOnlyInfo(this)" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#fff" class="bi bi-x-lg" viewBox="0 0 16 16">
                            <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z"/>
                        </svg>
                    </div>

                     <div class="container">
                         <a class="navbar-brand" asp-area="" asp-page="/Index">SK</a>
                        <div class=" d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav " >
                                <li class="nav-item " style="width:100%">
                             
                                    <a class="nav-link text-dark" style="float:right; " asp-page="/Logout">Wyloguj</a>

                                    <a class="nav-link text-dark" style="float:right" href='javascript:window.location.reload();'> 
                                        <div id="changesNotiContainer" class="changesNotiContainerCls">
                                             <div id="changesNoti"></div>
                                        </div>
                                    </a>
                                </li>
                            </ul>
                        </div>
                </div>
            }
            else
            {
                 <a class="navbar-brand" asp-area="" asp-page="/Index" style="left:50px">SK</a>
            }
           
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/signalR/signalr.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>