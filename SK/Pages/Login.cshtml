<input type="hidden" value="@Model.AlertLoginResult" class="passAlert" />

<div class="row  justify-content-center loginFormContainer">

   <!--<div style="background-color:red; width: 50%; height:100px ; left: 50%; transform: translate(-50%, 0); position: absolute; "></div>--> 
        <div class="row justify-content-center">
            <div class="loginFormLeftColumn" id="loginFormLeftColumnId"></div>

            <div class="loginFormRightColumn" >
                <form method="post"> 
               
                       <div class="col mt-3">
                           
                            <div class="kr1CustomInputContainer " 
                            onclick="kr1CustomInputFocusIn(this)" 
                            onfocusout="kr1CustomInputFocusIn(this)"
                            oninput="kr1CustomInputFocusIn(this)">
                                <span class="kr1CustomPlaceholder" >E-mail</span>
                                <input type="email" required class="kr1CustomInput allowShortInput" 
                                asp-for="@Model.LoginVal" id="loginFormEmail" />
                            </div>
                        </div>
                
             
                        <div class="col"  id="loginFormPasswordContainer">
                            <div class="kr1CustomInputContainer " 
                            onclick="kr1CustomInputFocusIn(this)" 
                            onfocusout="kr1CustomInputFocusIn(this)"
                            oninput="kr1CustomInputFocusIn(this)">
                                <span class="kr1CustomPlaceholder" >Hasło</span>
                                <input type="password" required class="kr1CustomInput allowShortInput" 
                                id="loginFormPassword" asp-for="@Model.PasswordVal" />
                            </div>
                        </div>


                    
                          <div class="row justify-content-center" id="loginFormSubmitBtnContainer">
                            <div class="kr1CustomInputContainer " style="width:fit-content " >
                                <button type="submit" class=" btn btn-dark" 
                                    asp-route-returnurl="@Request.Query["ReturnUrl"]" asp-page-handler="Login" id="loginFormSubmitBtn">Zaloguj</button>
                                <button type="submit" class="btn btn-dark"  asp-page-handler="PassRecover" id="passRecoveryFormSubmitBtn">Wyślij</button>
                            </div>

                        </div>
            
                    
                          <div class=" row justify-content-center" style="margin-top: -10px;">
                            <div class="kr1CustomInputContainer " style="width:fit-content" id="recoverPassLinkContainer" >
                                  <a class="customLink" href="javascript:displayRecoverPassClick()">Odzyskaj hasło</a>
                            </div>
                        </div>
                    

                </form>
            </div>
        </div>


</div>








